{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"lib": [
			"DOM",
			"ES2021"
		],
		"types": [
			"webpack-env",
			"./src/types/*"
		],
		"jsxImportSource": "preact",
		"declarationDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"assets/*": [
				"./assets/*"
			],
			"components/*": [
				"./src/components/*"
			]
		}
	},
	"include": [
		"./src"
	]
}
